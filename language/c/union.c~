#include <stdio.h>
#include <string.h>

union dat 
{
    int i;
    float f;
    double d;
    char str[20]; // include some space
};

union var 
{
    union dat data;
    void (*fun)(union dat);
}
    

int main ()
{
    union dat data;        
    data.i = 10;
    data.f = 220.5;
    strcpy(data.str, "C Programming");

    printf("data.i : %d\n", data.i);
    printf("data.f : %f\n", data.f);
    printf("data.str : %s\n", data.str);   
    
    return 0;
}
