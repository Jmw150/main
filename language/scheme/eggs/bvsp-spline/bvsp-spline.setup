;; -*- Hen -*-

(define (dynld-name fn)		
  (make-pathname #f fn ##sys#load-dynamic-extension))	

(compile -v -O3 -d0 -S -s bvsp-spline.scm dbvspis.c -j bvsp-spline -lf2c)
(compile -O3 -d0 -s bvsp-spline.import.scm)


(install-extension

  ; Name of your extension:
  'bvsp-spline

  ; Files to install for your extension:
  `(,(dynld-name "bvsp-spline") ,(dynld-name "bvsp-spline.import") )

  ; Assoc list with properties for your extension:
  `((version 1.3)
    ))

