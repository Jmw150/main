;;;; -*- Hen -*-

(define (dynld-name fn)		
  (make-pathname #f fn ##sys#load-dynamic-extension))	

(compile -O2 -d0 -s tiny-prolog.scm -j tiny-prolog)
(compile -O2 -d0 -s tiny-prolog.import.scm)

(install-extension

  ; Name of your extension:
  'tiny-prolog

  ; Files to install for your extension:
  `(,(dynld-name "tiny-prolog") ,(dynld-name "tiny-prolog.import") )

  ; Assoc list with properties for your extension:
  `((version 2.0)
    ))

